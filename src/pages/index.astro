---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main
    class="w-full flex flex-col gap-10 items-center text-pretty text-start selection:text-white"
  >
    <div
      class="flex max-w-[1200px] gap-5 items-start h-full w-full"
      transition:animate="slide"
    >
      <div class="flex flex-col sm:gap-4 font-space">
        <div>
          <h1 class="sm:text-2xl font-bold text-xl text-violet-700">
            Saif Al-Din
          </h1>
          <p class="sm:text-lg text-base my-2">
            Hi! My name is <i><b>Saif Al-Din Samy</b></i>. I usually go on the
            internet by the name <i><b>owlen</b></i>. I am a full-stack
            developer with a passion for all things software, and I love coding.
          </p>
        </div>

        <div>
          <h2 class="sm:text-xl text-lg font-bold">Contact Me</h2>
          <div class="flex gap-4">
            <a
              href="https://github.com/saifowlen"
              target="_blank"
              class="underline underline-offset-2 sm:text-lg text-base"
            >
              github
            </a>
            <a
              href="https://www.linkedin.com/in/saifowlen/"
              target="_blank"
              class="underline underline-offset-2 sm:text-lg text-base"
            >
              linkedin
            </a>
            <a
              href="mailto:seifowlen@proton.me"
              class="underline underline-offset-2 sm:text-lg text-base"
            >
              email
            </a>
          </div>
        </div>
      </div>
      <img
        alt="SpikeSpiegel(me)"
        class="sm:block hidden"
        src="/spike.jpg"
      />
    </div>
  </main>
</Layout>
