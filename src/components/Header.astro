---
import HeaderLink from "./HeaderLink.astro";
import { Icon } from "astro-icon/components";
---

<header
  class="w-full flex flex-col gap-10 items-center text-pretty text-start selection:text-white px-5"
>
  <nav
    class="text-white text-base py-6 gap-2 flex items-center flex-col gap-4 justify-between max-w-[1000px] w-full"
  >
    <a
      href="/"
      class="text-4xl mb-0 no-underline font-persona relative group flex items-center gap-2 select-none font-[400]"
      ><img src="/bg.png" class="h-9" alt="persona5-logo" />SAS<div
        class="absolute text-3xl transform font-expose md:opacity-0 z[50] group-hover:opacity-100 transition-opacity duration-100 text-[#c12129] -rotate-12 top-4 -right-3"
      >
        Home
      </div></a
    >
    <div class="flex gap-x-10">
      <div class="flex justify-between md:gap-10 gap-4 items-center">
        <HeaderLink href="/blog">Blogs</HeaderLink>
        <HeaderLink href="/projects">Projects</HeaderLink>
        <HeaderLink target="_blank" href="/resume.pdf">
          Resume
        </HeaderLink>
        <div class="items-center gap-1 social-media hidden">
          <HeaderLink
            target="_blank"
            href={"https://github.com/SaifOwleN"}
            class="pl-2 text-3xl"
          >
            <span class="sr-only">Check My GitHub</span>
            <Icon name="mdi:github" />
          </HeaderLink>
          <HeaderLink
            target="_blank"
            href="https://linkedin.com/in/saifowlen"
            class="pl-2 text-3xl"
          >
            <span class="sr-only text-white">Connect With Me on Linkedin</span>
            <Icon name="mdi:linkedin" />
          </HeaderLink>
        </div>
      </div>
    </div>
  </nav>
</header>
